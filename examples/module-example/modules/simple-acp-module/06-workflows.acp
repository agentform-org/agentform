// Module Workflows
// Pre-built workflows that module users can invoke

workflow "quick_ask" {
  entry = step.process
  
  step "process" {
    type  = "llm"
    agent = agent.quick_assistant
    
    input {
      question = input.query
    }
    
    output "answer" {
      from = result.text
    }
    
    next = step.end
  }
  
  step "end" {
    type = "end"
  }
}

workflow "summarize" {
  entry = step.summarize
  
  step "summarize" {
    type  = "llm"
    agent = agent.quick_assistant
    
    input {
      task = "Summarize the following text in 2-3 sentences:"
      text = input.content
    }
    
    output "summary" {
      from = result.text
    }
    
    next = step.end
  }
  
  step "end" {
    type = "end"
  }
}
