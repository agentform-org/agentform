// Policy Configuration
// Provides a standard policy with configurable budgets

policy "standard" {
  budgets {
    max_cost_usd_per_run = var.max_cost_per_run
    timeout_seconds      = var.timeout_seconds
  }
}

policy "strict" {
  budgets {
    max_cost_usd_per_run = 0.10
    timeout_seconds      = 30
  }
}
